{
  "name": "dresktop",
  "private": true,
  "version": "1.0.1-beta.3",
  "description": "Drupal desktop management",
  "author": {
    "name": "Jose Daniel Estrada",
    "email": "josedanielestrada@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/dresktop/dresktop"
  },
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc && vite build && electron-builder",
    "build:win": "vue-tsc && vite build && electron-builder --win --config",
    "build:mac": "vue-tsc && vite build --debug && electron-builder --mac --config",
    "build:linux": "vue-tsc && vite build && electron-builder --linux --arm64 --config",
    "git": "git add --all && git commit -m 'updated' && git push origin HEAD",
    "preview": "vite preview",
    "release": "release-it",
    "postinstall": "electron-builder install-app-deps",
    "rebuild": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@codemirror/lang-php": "^6.0.1",
    "@iconify/vue": "^4.1.1",
    "@release-it/conventional-changelog": "^8.0.2",
    "@tailwindcss/forms": "^0.5.7",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.12.2",
    "@vuelidate/core": "^2.0.3",
    "@vuelidate/validators": "^2.0.4",
    "@vueuse/core": "^10.9.0",
    "axios": "^1.6.8",
    "better-sqlite3": "^11.0.0",
    "codemirror": "^6.0.1",
    "electron-log": "^5.1.2",
    "electron-updater": "^6.1.8",
    "fs-extra": "^11.2.0",
    "i18next": "^23.14.0",
    "i18next-vue": "^5.0.0",
    "js-yaml": "^4.1.0",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "nanoid": "^3.3.7",
    "native-is-elevated": "^0.7.0",
    "node-ssh": "^13.1.0",
    "objection": "^3.1.4",
    "pinia": "^2.1.7",
    "ssh2": "^1.15.0",
    "sudo-prompt": "^9.2.1",
    "tinycolor2": "^1.6.0",
    "vue": "^3.4.21",
    "vue-codemirror": "^6.1.1",
    "vue-pick-colors": "^1.6.5",
    "vue-router": "^4.3.0"
  },
  "typings": "global.d.ts",
  "devDependencies": {
    "@types/lodash": "^4.17.0",
    "@types/tinycolor2": "^1.4.6",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vue/devtools": "^7.0.25",
    "autoprefixer": "^10.4.19",
    "electron": "^29.1.4",
    "electron-builder": "^24.13.3",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.5",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.4",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2"
  },
  "main": "dist-electron/main.js"
}
